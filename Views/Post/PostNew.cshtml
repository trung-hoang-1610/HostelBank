@model PostViewModel

<h2 class="mb-4" style="margin-top: 100px; text-align: center;"> <b>Đăng tin mới</b></h2>

<form asp-action="PostNew" asp-controller="Post" method="post">
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Thông tin cơ bản</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="Type">Loại</label>
                <select class="form-select form-select-lg mb-3" asp-for="Type" id="Type">
                    <option value="RENT" selected>Cho thuê</option>
                    <option value="SELL">Bán</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Address">Địa chỉ</label>
                <input asp-for="Address" id="Address" type="text" class="form-control" placeholder="Nhập địa chỉ">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Thông tin bài viết</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Title">Tiêu đề</label>
                <input asp-for="Title" id="Title" type="text" class="form-control" placeholder="VD: Bán nhà riêng 50m2 chính chủ tại Cầu giấy">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Mô tả</label>
                <textarea asp-for="Description" id="Description" class="form-control" rows="4" placeholder="Nhập mô tả chung về bất động sản của bạn. Ví dụ: khu nhà có vị trí thuận lợi, gần công viên, trường học,..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Thông tin nhà thuê</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Area">Diện tích</label>
                <input asp-for="Area" id="Area" type="number" class="form-control" placeholder="VD: 20">
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Mức giá</label>
                <input asp-for="Price" id="Price" type="number" class="form-control" placeholder="VD: 200.000 VND">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrls">Hình ảnh (URL)</label>
                <textarea asp-for="ImageUrls" id="ImageUrls" class="form-control" rows="4" placeholder="Nhập các URL hình ảnh, cách nhau bởi dấu chấm phẩy"></textarea>
                <span asp-validation-for="ImageUrls" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Đăng tin</button>
    </div>
</form>
